
@{
    ViewBag.Title = "Home";
}

<section class="slice py-7">
    <div class="container">
        <div class="row row-grid align-items-center">
            <div class="col-12 col-md-5 col-lg-6 order-md-2 text-center">
                <!-- Image -->
                <figure class="w-100">
                    <img alt="Image placeholder" src="~/Theme/assets/img/svg/illustrations/illustration-3.svg" class="img-fluid mw-md-120">
                </figure>
            </div>
            <div class="col-12 col-md-7 col-lg-6 order-md-1 pr-md-5">
                <!-- Heading -->
                <h1 class="display-4 text-center text-md-left mb-3">
                    entrancecoach.com online <strong class="text-primary">Exam Portal</strong>
                </h1>
                <!-- Text -->
                <p class="lead text-center text-md-left text-muted">
                    Welcome to entrancecoach.com exam portal
                </p>
                <!-- Buttons -->
                <div class="text-center text-md-left mt-5">
                    <a href="~/Registration/Student" class="btn btn-primary btn-icon" target="_blank">
                        <span class="btn-inner--text">Get started</span>
                        <span class="btn-inner--icon"><i data-feather="chevron-right"></i></span>
                    </a>
                    <a href="http://www.entrancecoach.com/" class="btn btn-neutral btn-icon d-none d-lg-inline-block" target="_blank">Know more</a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="slice slice-lg pt-lg-6 pb-0 pb-lg-6 bg-section-secondary">
    <div class="container">
        <!-- Title -->
        <!-- Section title -->
        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-6">
                <span class="badge badge-soft-success badge-pill badge-lg">
                    Get started
                </span>
                <h2 class=" mt-4">Online live classes</h2>
                <div class="mt-2">
                    <p class="lead lh-180">entrancecoach.com extensive coaching classes for students from class 6 to 12.</p>
                </div>
            </div>
        </div>
        <!-- Card -->
        <div class="row mt-5">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body pb-5">
                        <h5 class="h4 lh-130 mb-3">MEDICAL | NEET</h5>
                        <p class="text-muted mb-0">Prepare with india's top trainers...</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body pb-5">
                        <h5 class="h4 lh-130 mb-3">Engineering | IIT JEE</h5>
                        <p class="text-muted mb-0">India’s best JEE test series...</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body pb-5">
                        <h5 class="h4 lh-130 mb-3">Integrated Course</h5>
                        <p class="text-muted mb-0">Medical / Engineering...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<footer class="position-relative" id="footer-main">
    <div class="footer footer-dark bg-dark">
        <!-- Footer -->
        <div class="container pt-4">
            <hr class="divider divider-fade divider-dark my-4">
            <div class="row align-items-center justify-content-md-between pb-4">
                <div class="col-md-6">
                    <div class="copyright text-sm font-weight-bold text-center text-md-left">
                        &copy; @DateTime.Now.Year <a href="#" class="font-weight-bold" target="_blank">entrancecoach.com</a> | All rights reserved
                    </div>
                </div>
                <div class="col-md-6">
                    <ul class="nav justify-content-center justify-content-md-end mt-3 mt-md-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Terms
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>