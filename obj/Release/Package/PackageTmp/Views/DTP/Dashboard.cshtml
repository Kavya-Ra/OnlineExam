
@{
    ViewBag.Title = "Dashboard";
}

<section class="slice py-5 bg-section-fade">
    <div class="container">

        <div class="row align-items-center mb-4">
            <div class="col">
                <h1 class="h4 mb-0">Dashboard</h1>
            </div>
        </div>

        <div class="row mx-n2">
            <div class="col-lg-6 col-sm-6 px-2">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <div class="icon icon-shape icon-md bg-primary shadow-primary text-white">
                                <i class="fas fa-wallet"></i>
                            </div>
                        </div>
                        <h5 class="h3 font-weight-bolder mb-1">10</h5>
                        <span class="d-block text-sm text-muted font-weight-bold">Total QsAs</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6 px-2">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <div class="icon icon-shape icon-md bg-success shadow-success text-white">
                                <i class="fas fa-receipt"></i>
                            </div>
                        </div>
                        <h5 class="h3 font-weight-bolder mb-1">863</h5>
                        <span class="d-block text-sm text-muted font-weight-bold">
                            This Month QsAs
                        </span>
                    </div>
                </div>
            </div>
        </div>



        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row row-grid align-items-center">
                                    <div class="col-lg-8">
                                        <div class="media align-items-center">
                                            <span class="avatar bg-danger text-white rounded-circle mr-3">
                                                <i data-feather="bell"></i>
                                            </span>
                                            <div class="media-body">
                                                <h5 class="mb-0">Verify Account</h5>
                                                <p class="text-muted lh-150 text-sm mb-0">Your account has been not verified yet. Kindly please verify</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-auto flex-fill mt-4 mt-sm-0 text-sm-right d-none d-lg-block">
                                        <a href="#" class="btn btn-sm btn-neutral rounded-pill">Verify</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       

        

    </div>
</section>

